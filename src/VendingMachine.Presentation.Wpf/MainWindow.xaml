<Window x:Class="VendingMachine.Presentation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:appModel="clr-namespace:VendingMachine.Presentation.Wpf.AppModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance appModel:Wallet }"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Wallet">
            <Frame x:Name="Wallet" />
        </GroupBox>

        <GroupBox Grid.Column="1" Header="Vending Machine Terminal">
            <Frame x:Name="VendingMachine" />
        </GroupBox>
        
    </Grid>
    
</Window>
