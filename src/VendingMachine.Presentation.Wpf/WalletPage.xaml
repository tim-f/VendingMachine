<Page x:Class="VendingMachine.Presentation.Wpf.WalletPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:appModel="clr-namespace:VendingMachine.Presentation.Wpf.AppModel"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance appModel:Wallet }"
      >

    <Grid>
        <ListView ItemsSource="{Binding Coins}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Value}" />
                        <TextBlock Text="{Binding Count}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
